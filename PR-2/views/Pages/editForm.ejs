<%- include('../Partial/Header') %>
    <div class="d-flex align-items-center justify-content-center vh-80">
        <div class="col-5">
            <form action="" method="post" class="border p-3  rounded bg-white shadow" onsubmit="return validateForm(this)">
                <h3 class="text-secondary text-center mb-3">Employee Details</h3>
                <div class="d-flex gap-2">
                    <div class="col-6">
                        <div class="d-flex justify-content-between">
                            <label for="" class="text-secondary">Name :</label>
                            <p class="text-danger m-0" id="nameError"></p>
                        </div>
                        <input type="text" name="name" class="form-control" value="<%=employee.name%>" placeholder="Enter Name">
                    </div>
                    <div class="col-6">
                        <div class="d-flex justify-content-between">
                            <label for="" class="text-secondary">Email :</label>
                            <p class="text-danger m-0" id="emailError"></p>
                        </div>
                        <input type="email" name="email" class="form-control" value="<%=employee.email%>" placeholder="Enter Email">
                    </div>
                </div>
                <div class="d-flex align-items-center gap-2 mt-2">
                    <div class="col-6">
                        <div class="d-flex justify-content-between">
                            <label for="" class="text-secondary">Password :</label>
                            <p class="text-danger m-0" id="idError"></p>
                        </div>
                        <input type="number" name="id" class="form-control" value="<%=employee.id%>" placeholder="Enter Password">
                    </div>
                    <div class="col-6 text-center">
                        <div class="d-flex justify-content-between">
                            <label for="" class="text-secondary">Gender : </label>
                            <p class="text-danger m-0 me-5" id="genError"></p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <input type="radio" id="male" name="gender" value="Male" <% if (employee.gender === 'Male') { %>checked<% } %> class="me-1">
                            <label for="male" class="text-dark me-3">Male</label>

                            <input type="radio" id="female" name="gender" value="Female" <% if (employee.gender === 'Female') { %>checked<% } %> class="me-1">
                            <label for="female" class="text-dark">Female</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-3">
                    <label for="" class="text-secondary">Select Skills : </label>
                    <p class="text-danger ms-5 mb-0" id="skillError"></p>
                </div>
                <div class="d-flex align-items-center justify-content-between text-dark gap-2">
                    <div class="col-2">
                        <input type="checkbox" name="skills" value="JS" <% if (employee.skills.includes('JS')) { %>checked<% } %>> JavaScript<br>
                        <input type="checkbox" name="skills" value="React" <% if (employee.skills.includes('React')) { %>checked<% } %>> React<br>
                    </div>
                    <div class="col-2">
                        <input type="checkbox" name="skills" value="NextJS" <% if (employee.skills.includes('NextJS')) { %>checked<% } %>> NextJS<br>
                        <input type="checkbox" name="skills" value="NodeJS" <% if (employee.skills.includes('NodeJS')) { %>checked<% } %>> NodeJS<br>
                    </div>
                    <!-- <div class="col-2">
                        <input type="checkbox" name="skills" value="Volleyball" <% if (employee.skills.includes('Volleyball')) { %>checked<% } %>> Volleyball<br>
                        <input type="checkbox" name="skills" value="Badminton" <% if (employee.skills.includes('Badminton')) { %>checked<% } %>> Badminton<br>
                    </div> -->
                    <div class="col-6 text-center">
                        <div class="col-8 m-auto">
                            <div class="d-flex">
                                <label for="dropdown" class="text-secondary me-3">Branch :</label>
                                <p class="text-danger m-0 ms-5" id="branchError"></p>
                            </div>
                            <select id="dropdown" class="form-control" name="branch" >
                                <option value="" selected>--Select Branch--</option>
                                <option value="Roy.Co-1"  <% if (employee.branch === 'Roy.Co-1') { %>selected<% } %>>Roy.Co-1</option>
                                <option value="Roy.Co-2"  <% if (employee.branch === 'Roy.Co-2') { %>selected<% } %>>Roy.Co-2</option>
                                <option value="Roy.Co-3"  <% if (employee.branch === 'Roy.Co-3') { %>selected<% } %>>Roy.Co-3</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="d-flex  align-items-center justify-content-between mt-2">
                    <label for="textarea" class="text-secondary">Address :</label>
                    <p class="text-danger m-0" id="addError"></p>
                </div>
                <textarea id="textarea" class="form-control" rows="1" placeholder="Enter Address" name="address" ><%=employee.address%></textarea>
                <div class="text-center">
                    <button class="btn btn-outline-dark mt-2 text-center">Update</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('../Partial/Footer') %>

    <script>
        const validateForm = (e) => {
            let isValid = true;
            const nameError = document.getElementById("nameError");
            const emailError = document.getElementById("emailError");
            const idError = document.getElementById("idError");
            const genError = document.getElementById("genError");
            const skillError = document.getElementById("skillError");
            const branchError = document.getElementById("branchError");
            const addError = document.getElementById("addError");

            if (e.name.value === "") {
                nameError.innerText = "Name Required*";
                isValid = false;
            } else {
                nameError.innerText = ""
            }

            if (e.email.value === "") {
                emailError.innerText = "Email Required*";
                isValid = false;
            } else {
                emailError.innerText = ""
            }

            if (e.password.value === "") {
                idError.innerText = "Password Required*";
                isValid = false;
            } else {
                idError.innerText = ""
            }

            if (e.gender.value === "") {
                genError.innerText = "Select Gender*";
                isValid = false;
            } else {
                genError.innerText = ""
            }

            const isAnyGameSelected = Array.from(e.querySelectorAll('input[name="skills"]')).some(checkbox => checkbox.checked);
            if (!isAnyGameSelected) {
                skillError.innerText = "Select at least one game*";
                isValid = false;
            } else {
                skillError.innerText = "";
            }

            if (e.branch.value === "" || e.branch.value === "--Select Branch--") {
                branchError.innerText = "Select Branch*";
                isValid = false;
            } else {
                branchError.innerText = ""
            }

            if (e.address.value === "") {
                addError.innerText = "Address Required*";
                isValid = false;
            } else {
                addError.innerText = ""
            }

            return isValid
        }
    </script>