<%- include('../Partial/Header') %>
    <div class="d-flex align-items-center justify-content-center vh-80">
        <div class="col-10">
            <div class="card p-3">
                <div class="table-responsive">
                    <table
                        class="table table-light table-striped table-hover table-bordered align-middle text-center caption-top">
                        <caption class="m-0 pt-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <p class="fs-2 m-0 fw-semibold">User List</p>
                                <a href="/addUser" class="btn btn-dark">Add User</a>
                            </div>
                        </caption>
                        <thead class="table-dark">
                            <tr>
                                <th>Sr.</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Password</th>
                                <th>Gender</th>
                                <th>Games</th>
                                <th>Branch</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% players.forEach((player, index)=> { %>
                                <tr>
                                    <td>
                                        <%=index + 1%>
                                    </td>
                                    <td>
                                        <%=player.name%>
                                    </td>
                                    <td>
                                        <%=player.email%>
                                    </td>
                                    <td>
                                        <%=player.password%>
                                    </td>
                                    <td>
                                        <%=player.gender%>
                                    </td>
                                    <td>
                                        <%=player.games%>
                                    </td>
                                    <td>
                                        <%=player.branch%>
                                    </td>
                                    <td>
                                        <%=player.address%>
                                    </td>
                                    <td>
                                        <a href="/editPlayer/<%-index %>" class="btn btn-outline-success">Edit</a>
                                        <a href="/deletePlayer/<%-index %>" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<%- include('../Partial/Footer') %>